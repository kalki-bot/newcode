import java.io.*;
import java.util.*;

public class Solution {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        
        int n = scan.nextInt();
        int sum = 0;
        
        for(int i = 0; i < n; i++){
            int num = scan.nextInt();
            if(num % 2 == 0){
                sum += num;
            }
        }
        
        System.out.println(sum);
    }
}
